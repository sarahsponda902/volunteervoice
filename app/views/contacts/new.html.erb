<%= javascript_include_tag "/assets/jquery.js"%>


<style>


/* Mask for background, by default is not display */
#mask {
	display: none;
	background: #000; 
	position: fixed; left: 0; top: 0; 
	z-index: 10;
	width: 100%; height: 100%;
	opacity: 0.8;
	z-index: 999;
}

/* Style for actual popup windows  */
.contact-popup, .questions-popup, .organizations-popup{
	display:none;
	background: #D9DEDA;
	padding: 10px; 	
	border: 3px solid #575758;
	float: left;
	color:#6aaeba;
	font-size: 1.1em;
	position: fixed;
	top: 50%; left: 50%;
	z-index: 99999;
	box-shadow: 0px 0px 20px #999; /* CSS3 */
        -moz-box-shadow: 0px 0px 20px #999; /* Firefox */
        -webkit-box-shadow: 0px 0px 20px #999; /* Safari, Chrome */
	border-radius:3px 3px 3px 3px;
        -moz-border-radius: 3px; /* Firefox */
        -webkit-border-radius: 3px; /* Safari, Chrome */
}

.container {
	color:#575758;
}

.title {
	font-size:3em;
	margin:40px;
}
.leftHandImage {
	width:47%;
	margin:0; 
	padding:0; 
	margin-top:10px;
}
.rightHandBlurbs {
	width:47%;
	margin:0; 
	padding:0;
}
.box {
	border: 1px solid #575758;
}
.subBox {
	margin:10px; 
	border-bottom:1px solid #575758;
}
.lastBox {
	margin:10px;
	margin-bottom:0;
}
.popupLinkContainer {
	text-align:center;
}
a.contact-window, a.organizations-window, a.questions-window {
	text-align:center; 
	color:blue;
}
a.contact-window:hover, a.organizations-window:hover, a.questions-window:hover{
	color:white;
}
.popupTitle {
	font-family:JosefinSlabRegular; 
	font-size:3em; 
	color:#68c2d8; 
	line-height:2em;
	text-align:center;
}

.popupFieldContainer {
	margin-left:0px;
}
.popupField {
	height:20px; 
	width:232px;
}
.popupSubjectField {
	height:20px; 
	width:495px;
}
.popupBodyField {
	height:200px; 
	width:500px; 
	font-style:italic;
}
.submitButtonContainer {
	text-align:center;
	color:#E67B5A;
}
</style>



<% if flash.class.name != "String"%>
<% flash.each do |key, value| %>
  <div class="flash <%=key%>">
<%= pluralize value.length, "errors"%> prevented your message from being sent:<br />
	<% value.each do |f|%>
