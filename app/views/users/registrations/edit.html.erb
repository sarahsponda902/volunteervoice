<%= javascript_include_tag "/assets/jquery.js"%>

<style>
.container {
	color:#575758; 
	width:100%;
}
.top {
	margin-top:50px; 
	width:100%;
}
#edit-box {
	margin:0 auto;
	width:700px; 
	float:none;
}
.title {
	font-size:3em; 
	font-family:JosefinSlabRegular; 
	line-height:1.5em; 
	margin-bottom:20px;
}
.myInfoContainer {
	width:205px;  
	padding-right:0px;
	margin-left:90px;
}
.label {
	margin:10px; 
	font-size:1.3em; 
	font-family:architectsDaughterRegular;
}
.field {
	height:20px; 
	width:198px;
}
.select-div {
	position:absolute;
	top:127px; 
	height:30px; 
	width:198px; 
	overflow:hidden; 
	border-right:1px solid #575758; 
	border-left:1px solid #575758;
}

select {
	position:absolute; 
	border:1px solid #575758; 
	left:-5px; 
	width:225px; 
	height:30px; 
	background: url(https://s3-us-west-1.amazonaws.com/volunteervoice/images/arrowReviews.png) no-repeat right; 
	background-color:white;
}
.checkMark {
	position:absolute; 
	height:25px; 
	top:170px; 
	left:-2px; 
	display:none;
}
.secondMark {
	top:203px;
}
.firstMark {
	top:170px;
}
.checkBox {
	background:url(https://s3-us-west-1.amazonaws.com/volunteervoice/images/box.png);
	background-repeat:no-repeat; 
	padding-bottom:5px;
}
.secondBox {
	margin-top:0px;
}
.firstBox {
	margin-top:55px;
}
.hiddenCheckBox {
	display:block; 
	opacity:0;
	filter: alpha(opacity=0);
	margin-left:0px; 
	height:15px; 
	width:15px;
}
.checkBoxLabel {
	margin-left:30px; 
	font-size:.85em;
	width:168px;
}
.secondLabel {
	margin-top:-29px;
}
.firstLabel {
	margin-top:-22px; 
}
.myPasswordContainer {
	padding-left:30px; 
	width:225px;
	margin-top:-255px;
}
.lineSeparator {
	height:205px; 
	width:1px; 
	top:15px; 
	background-color: #575758; 
	position:absolute; 
	left:-35px;
}
#myProfilePicBoxContainer {
	margin:auto; 
	width:700px; 
	float:center;
}
.myProfilePicLabel {
	text-align:center;
	width:225px; 
	margin-left:95px; 
	font-family:architectsDaughterRegular; 
	font-size:1.3em; 
	padding-right:0px;
}
#currentImageLabel {
	font-family:Tahoma;
	font-size:0.77em;
}
#tinyUserProfilePic {
	margin-left:10px;
	margin-top:15px;
	height:30px;
}
#upload-box {
	width:300px;
}
.uploadImageAndFieldContainer {
 	display:block; 
	margin-left:-35px;
	margin-top:15px;
}
.uploadPhotoImage {
	height:40px;
	margin-top:-10px; 
	cursor:pointer;
}
#filename {
	height:25px; 
	width:100px; 
	position:relative; 
	top:-15px; 
	left:25px; 
	background:none; 
	border:none;
}
#user_photo {
	display:none;
}
.maxPhotoWidthBlurb {
	text-align:center; 
	color:#6aaeba; 
	font-size:.8em; 
	margin-top:-15px;
}
.submitContainer {
	text-align:center; 
	margin-top:50px;
}
</style>

<!-- ERROR MESSAGES -->
<div class="container">
	<% flash.each do |key, value| %>
	  <div class="flash <%=key%>">
	<%= pluralize value.length, "errors"%> prevented your program from being created:<br />
		<% value.each do |f|%>
			* <%=f%><br />
		<% end %>
	  </div>
	<% end %>
</div>

<div class="container">
	<div class="row top">
					<div id="edit-box" class="six columns">
						<p class="title" align="center">My Account</p>
						<%= form_for @user, :url => registration_path(@user), :html => { :method => :put } do |f| %>
						<div class="six columns myInfoContainer">

							<p class="label">My Info</p>

						  <div><%= f.label "Registered Email Address" %>
						  <%= f.email_field :email, :class => "field" %></div><br />
						<div>
		<%= f.label :country %>
						  <div class="select-div">
							 <select id="user_country" name="user[country]">
									<% THECOUNTRIES.keys.each do |f| %>
									<option value="<%=f%>"><%= THECOUNTRIES[f]%></option>
									<% end %>
							</select>
						</div>
						 <image class="checkMark firstMark" id="checkAgeCountry" src="https://s3-us-west-1.amazonaws.com/volunteervoice/images/checkmark.png" onclick="$(beforeCheck()); $('#user_profile_show').attr('checked', false)">
							<div class="checkBox firstBox" >
							<%= f.check_box :profile_show, :onchange => "$(beforeCheck())", :class => "hiddenCheckBox"%></div><div class="checkBoxLabel firstLabel"> Hide my age/country on my profile</div><br />

							<image class="checkMark secondMark" id="checkMessages" src="https://s3-us-west-1.amazonaws.com/volunteervoice/images/checkmark.png" onclick="$(messagesCheck());$('#user_messages_show').attr('checked', false)">
							<div class="checkBox secondBox">
							<%= f.check_box :messages_show, :onchange => "$(messagesCheck())", :class => "hiddenCheckBox"%></div><div class="checkBoxLabel secondLabel"> Do not allow others to send me messages</div><br />

						</div>

						</div>
						<div class="five columns myPasswordContainer">

							<p class="label">My Password</p>

						  <div><%= f.label :password %>
						  <%= f.password_field :password, :autocomplete => "off", :class =>"field"%></div><br />

						  <div><%= f.label :password_confirmation %>
						  <%= f.password_field :password_confirmation, :class =>"field"%></div><br />

						  <div><%= f.label "Current Password (needed for change)"%>
						  <%= f.password_field :current_password, :class =>"field" %></div>

												<div class="lineSeparator"></div>

					</div>
				</div>
			</div>
				<div class="row top">
					<div class="six columns" id = "myProfilePicBoxContainer">
					<div class="six columns myProfilePicLabel">My Profile Pic:
						<br />
						<span id="currentImageLabel">Current Pic: </span>
						<img id="tinyUserProfilePic" src="<%=current_user.square_image.url%>" />
					</div>
					<div id="upload-box" class="five columns">
						  <div class="uploadImageAndFieldContainer"><image src="/assets/changePhoto.png" class="uploadPhotoImage" onclick = "$(clickReviewPhoto())" onmousedown="this.className = 'shadowed'" onmouseup="this.className='nothing'"><input id="filename" type="textbox" disabled="true" value="no file selected">
							
				 <input id="user_crops" name="user[crops]" type="hidden" value="false" />
				
							  <%= f.file_field :photo, :id => "user_photo", :onchange => "$(nameFile()); $('#user_crops').val('true');"%>
							<p class="maxPhotoWidthBlurb">**Max photo width: 700 pixels</p></div>

					</div>
					</div>
					<div class="twelve columns submitContainer">
						<%= image_submit_tag "https://s3-us-west-1.amazonaws.com/volunteervoice/images/submitGreen.png", :onmousedown => "this.className = 'shadowed'", :onmouseup => "this.className = 'nothing'"%>
					</div>
			<% end %>
				</div>
			</div>
			

			<script type="text/javascript">
			function beforeCheck() {
				$('#checkAgeCountry').toggle();
			}

			function messagesCheck() {
				$('#checkMessages').toggle();
			}
			
			//define vars for message and profile that represent whether the user wants to be able to receive messages and whether the user wants other users to be able to see their account info
				var message = <%= current_user.messages_show.to_s %>;
				var profile = <%= current_user.profile_show.to_s %>;
				var country = <%= current_user.country.to_s %>;


			$(document).ready(function() {


				//set the user's country in the account-edit popup
				$('#user_country').val(country.toString());


				//hide/show message/profile checkmarks if appropriate
					if (message) 
					{
						$("#checkMessages").show();
					} else {
						$("#checkMessages").hide();
					}

					if (profile) 
					{
						$("#checkAgeCountry").show();
					} else {
						$("#checkAgeCountry").hide();
					}
			});
			</script>