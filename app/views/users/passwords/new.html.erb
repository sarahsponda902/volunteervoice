<%= javascript_include_tag "/assets/jquery.js"%>

<style>
.container {
	color:#575758;
}
.top {
	margin-top:80px;
}
.title {
	font-size:2em; 
	font-family:architectsDaughterRegular; 
	color:#62acbd; 
	text-align:center;
}
.forgotPasswordBoxContainer {
	margin-top:20px;
}
.forgotPasswordBox {
	background-color:#E9ECE9; 
	padding-top:30px; 
	padding-left:10px; 
	margin-top:20px; 
	margin-left:15%; 
	margin-right:15%; 
	border:1px solid #e67b5a; 
	height:250px;
}
#labelContainer {
	width:175px;
}
.label {
	font-size:1.3em; 
	margin-bottom:10px;
}
.field {
	height:23px; 
	width:190px; 
	background-color:white;
}
.blurb {
	margin-left: 9%;
	font-family:architectsDaughterRegular; 
	color: #e67b5a; 
	line-height:1.8em;
}
.submitContainer {
	 margin-top:125px;
}
</style>


<div class="container">
	<div class="row">
		<%= devise_error_messages! %>
		<div class="twelve columns top">
<p class="title">Forgot your password?</p>
	</div>
	</div>
	<div class="row">
	<div class="twelve columns forgotPasswordBoxContainer">
		<div class="forgotPasswordBox">

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>

  <div class="three columns" id="labelContainer"><p class="label"> Email or Username: </p>
  <%= f.text_field :login, :class => "field" %></div>

<div class="seven columns blurb">Enter your registered email here.  We will send you a top secret message that will allow you to change your password.</div>

<br />
<br />

  <div align="center" class="submitContainer">
<%= image_submit_tag ("https://s3-us-west-1.amazonaws.com/volunteervoice/images/SendMyInfoButton.png"), :onmousedown => "this.className = 'shadowed'", :onmouseup => "this.className = 'nothing'"%>
	
	</div>
<% end %>


</div>
</div>
</div>
</div>