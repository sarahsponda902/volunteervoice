<style>
.messageTable {
	margin-left:175px; 
	margin-top:-10px;
}
a.message-window {
	margin-left:-5px; 
	font-size:1.4em; 
	font-family:josefinSlabRegular; 
	color:#68c2d8;
}
a.message-window:hover {
	color:#9bce6c;
}
.messageDateCreated {
	font-size:1.2em;
	margin-left:20px; 
	color:#575758;
}
.messageSubject {
	font-size:1.2em;
	margin-left:20px; 
	color:#575758;
}
</style>


<div>
<table class="messageTable" cellspacing="0" border="0" cellpadding="0" width="80%">
	<tr>
		<td width="25%"><b>
			<% if User.where(:id => m.sender_id).empty? %>
			<a href= "#message-box<%=m.id%>" class="message-window">???</a>
			<% else %>
			<a href= "#message-box<%=m.id%>" class="message-window"> <%=User.find(m.sender_id).username%></a>
			<% end %>
			</td>
		<td width="12%"><p class="messageDateCreated"><%= m.created_at.to_date.strftime("%m/%e/%Y").gsub(/^0/, '')%></p></td>
		<td width="43%"><p class="messageSubject"><%=m.subject%></p></td>
		<td width="9%"><p style="margin-right:25px;margin-top:5px" align="center">
		<%= link_to (image_tag "https://s3-us-west-1.amazonaws.com/volunteervoice/images/favoritesX.png"), "#delete-box#{m.id}", :class => "delete-window", :onmousedown => "this.className = 'shadowed'", :onmouseup => "this.className = 'delete-window'"%>
		</p></td>
</tr>
<br />
</table>

<table id="message-box<%=m.id%>" class="m-popup">
	<a href="#" class="close"><div class="close_image"></div></a>
	<tr style="background-color:#E9ECE9"><td>
		<font style="font-size:1.4em; color:#575758; line-height:2em;">From: 
		<% if @user_ids.include?(m.sender_id)%>	
		<%= User.find(m.sender_id).username%>
		<% else %>
		<%= "???" %>
		<% end %>
		</font></td></tr>
	  
	    <tr style="background-color:#E9ECE9"><td><font style="font-size:1.4em; color:#575758; line-height:2em;">Subject: <%= m.subject%></font></td></tr>
	
		<tr style="background-color:#E9ECE9"><td><font style="color:#575758; line-height:1.1em;font-size:1.1em"><%= m.body.html_safe%></font></td></tr>

		<% if @user_ids.include?(m.sender_id)%>
		<tr style="background-color:#E9ECE9"><td><p style="text-align:right"><a  onclick="$(setMessageRecipient(<%=m.sender_id%>));$(setMessageSender(<%=m.recipient_id%>));$(setMessageSubject('<%=m.subject%>'));$(openReplyBox(<%=m.id%>))"><image src="https://s3-us-west-1.amazonaws.com/volunteervoice/images/reply.png"></a></p></td></tr>
		<% else %>
		<tr style="background-color:#E9ECE9"><td><font style="color:#575758; line-height:2em; font-style:italic; text-align:center">This user has deleted their profile</font></td></tr>
		<% end %>
</table>

<table id="delete-box<%=m.id%>" class="delete-popup">
		<tr><td colspan="2"><p style="font-size:2em; color:#575758; text-align:center">Are you sure?</p></td></tr>
		<tr style="background-color:#E9ECE9">
			<td><a class="close-delete-pop" style="cursor:pointer"> <%=image_tag "https://s3-us-west-1.amazonaws.com/volunteervoice/images/noKeepIt.png" %></a></td>
			<td>

			<%= link_to (image_tag "https://s3-us-west-1.amazonaws.com/volunteervoice/images/RealDeleteReviewButton.png"), "/messages/#{m.id}/mark_deleted", :onmousedown => "this.className = 'shadowed'", :onmouseup => "this.className = 'nothing'"%>

	</td></tr>
</table>

</div>