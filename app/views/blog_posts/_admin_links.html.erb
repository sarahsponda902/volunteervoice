<!-- this partial dictates the appearance of the admin links (admin only) that appear with a blog_post -->

<% if user_signed_in? && current_user.admin? %>
	<div class="blogAdminLinks" style="font-size:1.2em; text-align:center">
		<ul class="blogList">
			<li class="blogListFirst"><%= link_to 'New Blog Post', new_blog_post_path %></li>
			<li><%= link_to 'Edit Drafts', drafts_blog_posts_path %></li>
			<li><%= link_to 'All Posts', blog_posts_path %></li>
		</ul>
	</div>
<% end %>