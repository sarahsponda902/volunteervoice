<table class="our_blog_post">
	<%if !(f.square_image.url.nil?)%>
	<tr><td> <div align="center"><p class="squareImageContainer"><%= image_tag f.square_image.url, :class => "squareImage"%></p></div></td></tr>
	<% end %>
<tr><td><p class="green articleTitleContainer"><a href="/blog_posts/<%=f.id%>"> <%=f.title%></a></p></td></tr>
<tr><td><p class="datePostedContainer datePostedContainerOurBlog">Posted <%= f.published_at.strftime("%m/%e/%Y").gsub(/^0/,'')%></p></td></tr>
<tr><td><p class="blogPostBody"><%= (truncate f.body.gsub(%r{</?[^>]+?>}, ''), :length => 300).html_safe %> </p><br /> </td></tr>
</table>
