<table class="interesting_blog_post">
	<%if !(f.square_image.url.nil?)%>
	<tr><td> <div align="center"><p class="squareImageContainer"><%= image_tag f.square_image.url, :class => "squareImage"%></p></div></td></tr>
	<% end %>
	<tr><td><p class="datePostedContainer datePostedContainerInteresting">Posted <%= f.published_at.strftime("%m/%e/%Y").gsub(/^0/,'')%></p></td></tr>
<tr><td><p class="green articleTitleContainer"><a class="article-title" href="<%=f.blog_link%>" target="_blank"><%= f.title %></p></td></tr>

<tr><td><p class="blogPostBody blogPostBodyInteresting"><%= f.truncated125.html_safe%> </p><br /> </td></tr>

<tr><td><p class="green sourceLinkContainer" ><span class="fromLabel">From: </font><a href="<%=f.source%>" target="_blank"> <%= f.source_title%></a>	<% if !(current_user.nil?) && current_user.admin?%>
	<%= link_to "<DELETE>", :controller => "blog_posts", :action => "destroy", :id => f.id%>
	<% end %></p></td></tr>
</table>

