

<script src='http://jquery-star-rating-plugin.googlecode.com/svn/trunk/jquery.MetaData.js' type="text/javascript" language="javascript"></script>
<script src='http://jquery-star-rating-plugin.googlecode.com/svn/trunk/jquery.rating.js' type="text/javascript" language="javascript"></script>
<script src='http://jquery-fyneworks.googlecode.com/svn/trunk/documentation/documentation.js' type="text/javascript"></script>


<style>
#top {
	margin-top:120px;
}
#editReviewContainer {
	margin-left:8.45%; 
	margin-right:8.45%; 
	border-left:1px solid #e67b5a; 
	border-right: 1px solid #e67b5a;
}
#pageTitle {
	font-size:2.3em;
	font-family:JosefinSlabRegular;
	color:#e67b5a;
	margin-left:7%; 
	line-height:1.3em;
}
#addOnBody {
	width:700px;
	height:150px; 
	margin-left:7%;
}
#currentReviewBody {
	margin-left:7%; 
	margin-right:7%;
}
#outerStarsContainer {
	margin-left:8.45%; 
	margin-right:8.45%;
}
.starLabel {
	font-family:architectsDaughterRegular;
	color:#575758; 
	font-size:1.3em; 
	line-height:1.3em;
}
#overallStarLabel {
	font-family:architectsDaughterRegular;
	color:#575758; 
	font-size:1.3em; 
	line-height:1.5em;
}
.areYouSureTitle {
	font-size:2em; 
	color:#575758; 
	text-align:center;
}
tr, td {
	background-color:#E9ECE9;
}
a.close-delete-pop {
	cursor:pointer;
}
</style>

<style>
/* jQuery.Rating Plugin CSS - http://www.fyneworks.com/jquery/star-rating/ */
div.star-rating{float:left;width:45px;height:40px;text-indent:-999em;cursor:pointer;display:block;background:transparent;overflow:hidden}
div.star-rating,div.star-rating a{background:url(https://s3-us-west-1.amazonaws.com/volunteervoice/images/big_stars.png) no-repeat 0 0px;}
div.star-rating a{display:block;width:60px;height:100%;background-position:0 0px;border:0;}
div.star-rating-on a{background-position:0 -40px!important}
div.star-rating-hover a{background-position:0 -40px}
/* Read Only CSS */
div.star-rating-readonly a{cursor:default !important}
/* Partial Star CSS */
div.star-rating{background:transparent!important;overflow:hidden!important;}
/* END jQuery.Rating Plugin CSS */

</style>

<div class="container">
	<div class="row" id="top">
		<div class="ten columns" id="editReviewContainer">
			<p id="pageTitle">Review Add-on:</p>
			<%= form_for @review do |f|%>
			<%= f.text_area :body, :value => "", :id => "addOnBody", :value => params[:edit_review_body]%>
			<div id="currentReviewBody"><%= @review.body.html_safe%></div>
		</div>
		<div class="ten columns" id="outerStarsContainer">
			<br />
			<br />
			<br />
			<div class="nine columns">
				<div class="four columns">
					<p class="starLabel"> Preparation/Orientation</p>
					<p class="starLabel">Support</p>
					<p class="starLabel">Project Impact</p>
					<p class="starLabel">Structure/Sustainability</p><br /><br /><br /><br />
					<p id="overallStarLabel">Overall (adjustable)</p>
				</div>
				<div class="six columns">
					<%= render :partial => "star", :locals => {:star => @review.preparation}%><br />
					<%= render :partial => "star", :locals => {:star => @review.support}%><br />
					<%= render :partial => "star", :locals => {:star => @review.impact}%><br />
					<%= render :partial => "star", :locals => {:star => @review.structure}%><br /><br /><br />
					<input name="review[overall]" type="radio" class="star {split:2}" id="overall" value= "0.5"/>
					<input name="review[overall]" type="radio" class="star {split:2}" id="overall" value= "1"/>
					<input name="review[overall]" type="radio" class="star {split:2}" id="overall" value= "1.5"/>
					<input name="review[overall]" type="radio" class="star {split:2}" id="overall" value = "2"/>
					<input name="review[overall]" type="radio" class="star {split:2}" id="overall" value= "2.5"/>
					<input name="review[overall]" type="radio" class="star {split:2}" id="overall" value = "3"/>
					<input name="review[overall]" type="radio" class="star {split:2}" id="overall" value= "3.5"/>
					<input name="review[overall]" type="radio" class="star {split:2}" id="overall" value = "4"/>
					<input name="review[overall]" type="radio" class="star {split:2}" id="overall" value= "4.5"/>
					<input name="review[overall]" type="radio" class="star {split:2}" id="overall" value = "5"/>
				</div>
			</div>
			<div class="two columns">
				<br />
				<br />
				<%=image_submit_tag "https://s3-us-west-1.amazonaws.com/volunteervoice/images/applyRevisions.png", :style => "width:105px", :onmousedown => "this.className = 'shadowed'", :onmouseup => "this.className = 'nothing'"%>
				<% end %>
				<br />
				<br />
				<br />

				<%= link_to (image_tag "https://s3-us-west-1.amazonaws.com/volunteervoice/images/deleteReview.png"), "#delete-box", :class => "delete-window", :onmousedown => "this.className = 'shadowed'", :onmouseup => "this.className = 'delete-window'"%>
			</div>
		</div>
	</div>
</div>
</div>

<table id="delete-box" class="delete-popup">
	<tr><td colspan="2"><p class="areYouSureTitle">Are you sure?</p></td></tr>
	<tr>
		<td><a class="close-delete-pop"> <%=image_tag "https://s3-us-west-1.amazonaws.com/volunteervoice/images/noKeepIt.png" %></a></td>
		<td>
		<%= form_for @review, :method => :delete do%>
		<%= image_submit_tag "https://s3-us-west-1.amazonaws.com/volunteervoice/images/RealDeleteReviewButton.png", :onmousedown => "this.className = 'shadowed'", :onmouseup => "this.className = 'nothing'"%>

		<% end %>
</td></tr>
</table>
	


	
	
	