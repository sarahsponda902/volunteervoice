<!-- Org Login Popup -->	
<div id="org-login-box" class="org-login-popup">
	<!-- Close button -->
	<a href="#" class="close">
		<div class="close_image"></div>
	</a><!-- end close button -->
	
	<!-- form for organization account session -->
	<%= form_for("organization_account", :url => organization_account_session_path) do |f| %>
	
	<!-- Login (email/username) field -->
	<div class="popupFieldLabel">Email or Username:<br />
		<%= f.text_field :login, :class => "popupTextField"%>
	</div><!-- end login field -->
	
	<br />

	<!-- Password field -->
	<div class="popupFieldLabel">Password:<br />
		<%= f.password_field :password, :class => "popupTextField"%>
	</div><!-- end password field -->

	<!-- BEGIN CHECK BOX/REMEMBER ME -->
	
	<!-- check mark image -->
	<image class="rememberMeCheckMark" 
		   id="checkBefore3" 
		   src="https://s3-us-west-1.amazonaws.com/volunteervoice/images/checkmark.png" 
		   onclick="beforeCheck3()" /><!-- end check mark image -->
		
	<!-- check box (actual check box is hidden. div background is image of a check box)-->
	<div class="rememberMeCheckBox">
		<%= f.check_box :remember_me, 
						:onclick => "$(beforeCheck3())", 
						:class =>"hiddenPopupCheckbox"%>
	</div><!-- end check box -->
	
	<!-- remember me label -->
	<div id="rememberMeLabel"> Remember me</div>
	
	<br />
	<!-- END CHECK BOX/REMEMBER ME -->

	<!-- login/submit button -->			
	<div align="center">
